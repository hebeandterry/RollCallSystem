<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTextStyle</item>
        <item name="android:background">@color/purple_1</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/wcl</item>
    </style>

    <style name="CustomTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/wcl</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>